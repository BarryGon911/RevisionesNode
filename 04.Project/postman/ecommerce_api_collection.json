{
  "info": {
    "name": "Ecommerce API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"nombre\": \"Admin\", \"email\": \"admin@example.com\", \"password\": \"secret123\", \"role\": \"admin\"}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"admin@example.com\", \"password\": \"secret123\"}"
        }
      }
    },
    {
      "name": "List Productos",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/productos",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "productos"
          ]
        }
      }
    },
    {
      "name": "Crear Producto (admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/productos",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "productos"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"nombre\": \"Nuevo\", \"descripcion\": \"desc\", \"precio\": 199.99, \"stock\": 5, \"categoriaId\": 1}"
        }
      }
    },
    {
      "name": "Carrito: agregar item",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/carrito/items",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "carrito",
            "items"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"productoId\": 1, \"cantidad\": 2}"
        }
      }
    },
    {
      "name": "Crear Orden",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ordenes",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "ordenes"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}