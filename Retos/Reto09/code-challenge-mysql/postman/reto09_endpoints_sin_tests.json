{
  "info": {
    "name": "Biblioteca API",
    "_postman_id": "12345-biblioteca-api",
    "description": "Colección para probar endpoints de autores, libros y reseñas.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Crear Autor",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"Gabriel García Márquez\",\n  \"nacionalidad\": \"Colombiana\",\n  \"fechaNacimiento\": \"1927-03-06\"\n}"
        },
        "url": { "raw": "http://localhost:3000/autores", "host": ["http://localhost:3000"], "path": ["autores"] }
      }
    },
    {
      "name": "Crear Libro",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"titulo\": \"Cien Años de Soledad\",\n  \"anio\": 1967,\n  \"genero\": \"Realismo Mágico\",\n  \"autorId\": 1\n}"
        },
        "url": { "raw": "http://localhost:3000/libros", "host": ["http://localhost:3000"], "path": ["libros"] }
      }
    },
    {
      "name": "Crear Reseña",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"comentario\": \"Una obra maestra\",\n  \"puntuacion\": 5,\n  \"libroId\": 1\n}"
        },
        "url": { "raw": "http://localhost:3000/resenas", "host": ["http://localhost:3000"], "path": ["resenas"] }
      }
    },
    {
      "name": "Obtener todos los libros",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:3000/libros", "host": ["http://localhost:3000"], "path": ["libros"] }
      }
    },
    {
      "name": "Obtener todas las reseñas",
      "request": {
        "method": "GET",
        "url": { "raw": "http://localhost:3000/resenas", "host": ["http://localhost:3000"], "path": ["resenas"] }
      }
    }
  ]
}
