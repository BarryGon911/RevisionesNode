      "name": "Registro OK",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "",
              "pm.test(\"201 Created\", function(){ pm.expect([200,201]).to.include(pm.response.code); });",
              "const j = pm.response.json();",
              "pm.test(\"success=true\", function(){ pm.expect(j.success).to.be.true; });",
              "pm.test(\"No expone contraseña\", function(){ pm.expect(j.data).to.not.have.property('contraseña'); });",
              "pm.test(\"Devuelve nombre enviado\", function(){ pm.expect(j.data.nombre).to.include(pm.collectionVariables.get('tsNombre')); });"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/registro",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "registro"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nombre\": \"{{tsNombre}}\",\n  \"correo\": \"test.r10@example.com\",\n  \"edad\": 25,\n  \"contraseña\": \"secreta1\"\n}"
