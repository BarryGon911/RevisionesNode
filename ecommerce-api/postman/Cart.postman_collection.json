{
  "info": {
    "name": "Cart",
    "_postman_id": "94d60427d43009dce26c796b",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get my cart",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{apiURL}}/cart",
          "host": [
            "{{apiURL}}"
          ],
          "path": [
            "cart"
          ]
        },
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        }
      }
    },
    {
      "name": "Add product to cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{apiURL}}/cart/add-product",
          "host": [
            "{{apiURL}}"
          ],
          "path": [
            "cart",
            "add-product"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2\n}"
        },
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        }
      }
    },
    {
      "name": "Update item quantity",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{apiURL}}/cart/item",
          "host": [
            "{{apiURL}}"
          ],
          "path": [
            "cart",
            "item"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 1\n}"
        },
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        }
      }
    },
    {
      "name": "Remove item",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{apiURL}}/cart/item/{{productId}}",
          "host": [
            "{{apiURL}}"
          ],
          "path": [
            "cart",
            "item",
            "{{productId}}"
          ]
        },
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{token}}",
              "type": "string"
            }
          ]
        }
      }
    }
  ]
}